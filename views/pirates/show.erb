<!-- # <h1>Display your Pirate here</h1>-->
  <h1> Your Pirate </h1>
    <h2>Name: <%= @pirate.name %></h2>
    <h4>Weight: <%= @pirate.weight %> lbs</h4>
    <h4>Height: <%= @pirate.height %> inches</h4>
  
<!-- # <h2>Display your first ship here</h2>-->

    <h1>Ship One</h1>
    <% @ships.each.with_index do |ship, index| %>
        <% if index == 0 %>
        <h4>Name: <%= ship.name%></h4>
        <h4>Type: <%= ship.type %></h4>
        <h4>Booty: <%= ship.booty %></h4>
        <% end %>
      <% end %>
      
    
 <!-- # <h2>Display your second ship here</h2>-->
    <h1>Ship Two</h1>
    <% @ships.each.with_index do |ship, index| %>
        <% if index == 1 %>
        <h4>Name: <%= ship.name %></h4>
        <h4>Type: <%= ship.type %></h4>
        <h4>Booty: <%= ship.booty %></h4>
        <% end %>
      <% end %>
